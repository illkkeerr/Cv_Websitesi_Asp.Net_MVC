@model List<CV.Models.Portfolyo>
@{
    int number = 0;
}
<div class="shadow-1-strong bg-white my-5 p-5 d-print-none" id="portfolio">
    <div class="portfolio-section">
        <h2 class="h2 fw-light mb-4">Portfolyo</h2>
        @foreach (var x in Model)
        {
            if (number % 2 == 0)
            {
                <div class="row g-0">
                    <div class="col-md-6"><a href="@x.Link" target="_blank"><img class="img-fluid" src="~/Cv_Portfolyo/@x.Resim" width="800" height="500" /></a></div>
                    <div class="col-md-6 d-flex align-items-center" data-aos="fade-left" data-aos-delay="100">
                        <div class="m-4 mt-md-2">
                            <p class="text-teal text-small">@x.Programlar</p>
                            <h3>@x.Baslik</h3>
                            <p class="text-muted">@x.Aciklama</p>
                        </div>
                    </div>
                </div>
                <br />
            }
            else
            {
                <div class="row g-0 portfolio-reverse">
                    <div class="col-md-6 d-flex align-items-center" data-aos="fade-right" data-aos-delay="100">
                        <div class="m-4 mt-md-2 text-end">
                            <p class="text-teal text-small">@x.Programlar</p>
                            <h3>@x.Baslik</h3>
                            <p class="text-muted">@x.Aciklama</p>
                        </div>
                    </div>
                    <div class="col-md-6"><a href="@x.Link" target="_blank"><img class="img-fluid" src="~/Cv_Portfolyo/@x.Resim" width="800" height="500" /></a></div>
                </div>
                <br />
            }
            number++;
        }

        
        <br />
        <p>Diğer Projelerimi de incelemek için <span><a href="https://github.com/illkkeerr">github</a></span> hesabıma bakabilirsiniz.</p>
    </div>
</div>
