@model List<CV.Models.HKisiselBilgiler>
<div class="shadow-1-strong bg-white my-5 p-5" id="about">
    <div class="about-section">
        <div class="row">
            @foreach (var x in ViewBag.dgr)
            {
                <div class="col-md-6">
                    <h2 class="h2 fw-light mb-4">Hakkımda</h2>
                    @*<p>Hello! I’m Walter Patterson. I am passionate about UI/UX design and Web Design. I am a skilled <strong>front-end developer</strong> and master of graphic design tools such as Photoshop and Sketch. I am a quick learner and a team worker that gets the job done.</p>*@
                    <p>@x.Aciklama</p>
                </div>
            }

            <div class="col-md-5 offset-lg-1">
                <div class="row mt-2">
                    <h2 class="h2 fw-light mb-4">Kişisel Bilgiler</h2>
                    @foreach (var x in Model)
                    {


                        <div class="col-sm-5">
                            <div class="pb-2 fw-bolder"><i class="@x.Baglanti" style="width:24px;opacity:0.85;"></i> @x.Ad</div>
                        </div>
                        <div class="col-sm-7">
                            <div class="pb-2">@x.Aciklama</div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
