@model List<CV.Models.Yetenek>
    @{ 
        int sayi = 0;
    }
<div class="shadow-1-strong bg-white my-5 p-5" id="skills">
    <div class="skills-section">
        <h2 class="h2 fw-light mb-4">Yetenekler</h2>
        <div class="row">
            @foreach (var x in Model)
            {
                if (sayi%2==0)
                {
                    <div class="col-md-6">
                        <div class="mb-3">
                            <span class="fw-bolder">@x.Ad</span>
                            <div class="progress my-2 rounded" style="height: 20px">
                                <div class="progress-bar bg-info" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @x.Seviye%;" aria-valuenow="@x.Seviye" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-6">

                        <div class="mb-3">
                            <span class="fw-bolder">@x.Ad</span>
                            <div class="progress my-2 rounded" style="height: 20px">
                                <div class="progress-bar bg-secondary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="600" data-aos-anchor=".skills-section" style="width: @x.Seviye%" aria-valuenow="@x.Seviye" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                }

                sayi++;
            }


        </div>
    </div>
</div>
