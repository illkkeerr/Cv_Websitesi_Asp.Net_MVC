@model CV.Models.Iletisim
  


<div class="shadow-1-strong bg-white my-5 p-5" id="contact" name="contact">
    <div class="contant-section">
        <h2 class="h2 fw-light text mb-4">İletişim</h2>
        <div class="row mb-4">
            <div class="col-md-5" data-aos="fade-left" data-aos-delay="200">
                <div class="mt-1">
                    <div class="h6"><i class="far fa-envelope pe-2 text-muted" style="width:24px;opacity:0.85;"></i> @ViewBag.dgr.Aciklama</div>
                </div>
                <div class="mt-5 d-print-none">
                    <form method="post">

                        <div class="form-outline mb-4">
                            <input type="text" id="Ad" name="Ad" class="form-control" required />
                            <label class="form-label" for="name">Ad</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="email" id="Email" name="Email" class="form-control" required />
                            <label class="form-label" for="email">Email Adresi</label>
                        </div>
                        <div class="form-outline mb-4">
                            <textarea class="form-control" style="resize: none;" id="Mesaj" name="Mesaj" rows="4" required></textarea>
                            <label class="form-label" for="message">Mesaj</label>
                        </div>



                        <button class="btn btn-info btn-block mb-4" type="submit">Send</button>
                        @ViewBag.Message
                    </form>
                </div>
            </div>
            <div class="col-md-7 d-print-none" data-aos="zoom-in" data-aos-delay="100"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4315.0272389608745!2d28.8876258177214!3d41.08121393008642!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab04f955b9afd%3A0x5a8a9a66f73a9375!2sYenimahalle!5e0!3m2!1str!2str!4v1687418910926!5m2!1str!2str" width="500" height="400" style="border:0;width:100%;" allowfullscreen="" loading="lazy"></iframe></div>
        </div>
    </div>
</div>
@if (ViewBag.Message != null || ViewBag.Message != string.Empty)
{
    <script>
        $(document).ready(function () {
            var targetOffset = $('#contact').offset().top;
            $('html, body').animate({ scrollTop: targetOffset }, 'slow');
        });
    </script>
}











